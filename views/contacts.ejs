<%- include('sections/header') %>
<div class="col">
    <div class="container text-dark">
        <div class="row m-5">
            <div class="col">
                <h1 class="display-5 text-center">Связь с нами</h1>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col p-4">
                <form action="">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="nameInput">Имя:</label>
                            <input type="text" class="form-control" id="nameInput" placeholder="Имя или псевдоним">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="emailInput">Email:</label>
                            <input type="text" class="form-control" id="emailInput" placeholder="Электронная почта для обратной связи">
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="form-group col-md-8">
                            <label for="msg">Сообщение: </label>
                            <textarea class="form-control" name="msg" id="msg" rows="4"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 d-flex justify-content-center">
                            <button class="btn btn-dark px-3 m-3" style="width: 300px">Отправить</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('sections/footer') %>